{
  "name": "glowing-fishstick",
  "version": "0.0.1",
  "description": "An example of replacing distributed Express templates with a composable module",
  "keywords": [
    "template",
    "module",
    "app"
  ],
  "workspaces": [
    "app",
    "core/app",
    "core/api",
    "core/shared"
  ],
  "homepage": "https://github.com/jeffcaradona/glowing-fishstick#readme",
  "bugs": {
    "url": "https://github.com/jeffcaradona/glowing-fishstick/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeffcaradona/glowing-fishstick.git"
  },
  "license": "MIT",
  "author": "Jeff Caradona <jeffcaradona@gmail.com>",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "files": [],
  "scripts": {
    "start:app": "node app/src/server.js",
    "dev:app": "nodemon --exec node app/src/server.js",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose tests/unit",
    "test:integration": "vitest run --reporter=verbose tests/integration",
    "test:smoke": "vitest run --reporter=verbose tests/smoke",
    "test:all": "vitest run --reporter=verbose",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "cross-env": "^10.1.0",
    "eslint": "^10.0.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "vitest": "^4.0.18"
  }
}